<div class="row">
<div class="columns">
<br />
<div id="listmenu">
  <a class="<%= @list_confirmed ? "" : "active" %>" href="/attendees">Vahvistamattomat</a> |
  <a class="<%= @list_confirmed ? "active" : "" %>" href="/attendees?confirmed">Vahvistetut</a>
  <p>Kirjaudu ulos sulkemalla selain (kokonaan).</p>
</div>
<table id="attendee-list">
  <thead>
    <tr>
      <th width="150">Vastaanotettu</th>
      <th width="200">Nimi</th>
      <th width="100">Koulu</th>
      <th>Sähköposti</th>
      <th>Puhelinnumero</th>
      <th width="50">Viite</th>
      <% unless @list_confirmed %><th></th><% end %>
    </tr>
  </thead>
  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td class="date"><%= attendee.created_at.strftime("%F %T") %></td>
        <td><%= attendee.name %></td>
        <td><%= attendee.school.name if attendee.school %></td>
        <td><%= attendee.email %></td>
        <td><%= attendee.phone %></td>
        <td><%= attendee.reference_number %></td>
        <% unless @list_confirmed %>
          <td>
            <%= button_to "Vahvista", confirm_attendee_path(attendee) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
